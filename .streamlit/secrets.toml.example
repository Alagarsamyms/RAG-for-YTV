# ──────────────────────────────────────────────────────────────────
#  Streamlit Cloud Secrets Template
#
#  1. In Streamlit Cloud dashboard → your app → Settings → Secrets
#  2. Paste the content below (with your real values filled in)
#  3. Save — your app will reload with the secrets available
#
#  ⚠️  DO NOT commit this file to GitHub with real values!
#      The real secrets.toml is in .gitignore.
# ──────────────────────────────────────────────────────────────────

OPENAI_API_KEY      = "sk-your-openai-api-key-here"
SUPABASE_URL        = "https://your-project.supabase.co"
SUPABASE_KEY        = "your-supabase-anon-or-service-role-key-here"

# Optional overrides (have sensible defaults in app)
EMBEDDING_MODEL     = "text-embedding-3-small"
LLM_MODEL           = "gpt-4o-mini"
CHUNK_SIZE_TOKENS   = "500"
CHUNK_OVERLAP_TOKENS = "50"
TOP_K_RETRIEVAL     = "5"
